<% @categories.each do |category| %>
  <h3><%= link_to category.name, category_path(space_to_dash(category.name)) %></h3>
  <ul>
    <% category.articles.each do |article| %>
      <li><%= link_to article.title, category_article_path(space_to_dash(category.name), space_to_dash(article.title)) %></li>
    <% end %>
  </ul>
<% end %>
